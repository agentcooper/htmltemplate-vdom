#!/usr/bin/env node

var path = require('path');

var fs = require('fs');

var h = require('hyperscript');

var colors = require('colors/safe');

var generator = require('../lib/generator/');
var requireString = require('../lib/require-string');

var argv = require('yargs')
    .usage('Usage: $0 [options]')
    .options({
        'path': {
            demand: true,
            describe: 'file to compile',
            type: 'string'
        },

        'run': {
            describe: 'run template with given JS env',
            type: 'string'
        },

        'hooks': {
            describe: 'add hooks support',
            type: 'string'
        }
    })
    .argv;

var template = fs.readFileSync(argv.path).toString().trim();

var renderFunctionString = generator.fromString(template, {
    hooks: argv.hooks
});

console.log(
    colors.green(renderFunctionString)
);

if (argv.run) {
    var env = require(path.resolve('./', argv.run));
    var compiled = requireString(renderFunctionString);

    console.log(
        colors.yellow(compiled.render(env, h).outerHTML)
    );
}
